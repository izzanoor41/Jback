# ===========================================
# JBACK - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# APP CONFIGURATION
# ===========================================
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# ===========================================
# AUTHENTICATION (NextAuth.js)
# ===========================================
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-here

# ===========================================
# DATABASE (TiDB Serverless)
# ===========================================
# Get from: https://tidbcloud.com
DATABASE_URL=mysql://user:password@gateway.tidbcloud.com:4000/database?sslaccept=strict

# ===========================================
# AI SERVICES
# ===========================================

# Google Gemini (Primary AI)
# Get from: https://aistudio.google.com/apikey
GOOGLE_CLOUD_API_KEY=AIzaSy...

# Google Cloud Project (Optional - for Vertex AI)
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# OpenAI (Fallback AI)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...

# ===========================================
# CONFLUENT CLOUD (Real-time Streaming)
# ===========================================
# Get from: https://confluent.cloud
# Trial code: CONFLUENTDEV1 (30 days free)

# Kafka Bootstrap Servers
CONFLUENT_BOOTSTRAP_SERVERS=pkc-xxxxx.region.gcp.confluent.cloud:9092

# Kafka API Credentials
CONFLUENT_API_KEY=your-api-key
CONFLUENT_API_SECRET=your-api-secret

# REST Endpoint (Optional)
CONFLUENT_REST_ENDPOINT=https://pkc-xxxxx.region.gcp.confluent.cloud:443

# MCP Server Compatible Variables (same as above)
BOOTSTRAP_SERVERS=pkc-xxxxx.region.gcp.confluent.cloud:9092
KAFKA_API_KEY=your-api-key
KAFKA_API_SECRET=your-api-secret
CONFLUENT_CLOUD_API_KEY=your-api-key
CONFLUENT_CLOUD_API_SECRET=your-api-secret

# ===========================================
# FEATURE FLAGS
# ===========================================
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_CULTURAL_AI=true
