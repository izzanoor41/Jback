# Jback - Real-Time Cultural Intelligence Platform
# Copy this file to .env and fill in your values

# App Configuration
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
AUTH_SECRET=your_auth_secret_here

# Database (TiDB Serverless)
DATABASE_URL=mysql://user:password@host:4000/database?sslaccept=strict

# AI Services
OPENAI_API_KEY=sk-xxx

# Confluent Cloud - Real-time Streaming
# Get these from: https://confluent.cloud
# Use promo code: CONFLUENTDEV1 for 30-day trial
CONFLUENT_BOOTSTRAP_SERVERS=pkc-xxx.region.gcp.confluent.cloud:9092
CONFLUENT_API_KEY=your_api_key
CONFLUENT_API_SECRET=your_api_secret
CONFLUENT_REST_ENDPOINT=https://pkc-xxx.region.gcp.confluent.cloud:443

# Google Cloud - AI Services
# Get these from: https://console.cloud.google.com
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_API_KEY=AIzaxxx

# Feature Flags
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_CULTURAL_AI=true
